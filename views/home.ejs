<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Green Byte Bistro</title>
</head>
<%- include('./partials/nav') %>

<body>
  <h1>The Green Byte Bistro</h1>

  <h2>Restaurant Information</h2>
  <p><strong>Name:</strong> <%= restaurant.name %></p>
  <p><strong>Status:</strong> <%= restaurant.isOpen ? 'Open' : 'Closed' %></p>
  <p><strong>Address:</strong> <%= restaurant.address %></p>
  <p><strong>Phone:</strong> <%= restaurant.phone %></p>

  <h3>Menu</h3>
  <ul>
    <% restaurant.menu.forEach(function(item) { %>
      <li>
        <h4><%= item.name %> - $<%= item.price.toFixed(2) %></h4>
        <p><strong>Category:</strong> <%= item.category %></p>
        <p><strong>Rating:</strong> <%= item.rating %> stars</p>
        <p><strong>Details:</strong> <%= item.details %></p>
      </li>
    <% }); %>
  </ul>
</body>
</html>